{
	"name": "format-auto-space",
	"displayName": "format-auto-space",
	"description": "format md file",
	"version": "1.0.2",
	"publisher": "HIOX-unique",
	"repository": {
		"type": "git",
		"url": "https://github.com/uni-ww/format-auto-space.git"
	},
	"engines": {
		"vscode": "^1.100.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "formatSpace.format",
				"title": "Format Auto Space"
			}
		],
		"keybindings": [
			{
				"command": "formatSpace.format",
				"key": "ctrl+s",
				"mac": "ctrl+s",
				"when": "editorTextFocus && (resourceExtname == .md || resourceExtname == .txt)"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "formatSpace.format",
					"when": "editorTextFocus && (resourceExtname == .md || resourceExtname == .txt)",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "pnpm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "pnpm run compile && pnpm run lint",
		"lint": "eslint src",
		"test": "vscode-test && jest",
		"test:unit": "jest",
		"package": "vsce package",
		"publish:vs": "vsce publish"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "20.x",
		"@types/vscode": "^1.100.0",
		"@typescript-eslint/eslint-plugin": "^8.31.1",
		"@typescript-eslint/parser": "^8.31.1",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.5.2",
		"eslint": "^9.25.1",
		"prettier": "^3.5.3",
		"typescript": "^5.8.3",
		"jest": "^29.7.0",
		"ts-jest": "^29.1.1",
		"@types/jest": "^29.5.8"
	}
}
