{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./out",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest"] // 添加此行，显式指定 Jest 的类型定义
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}